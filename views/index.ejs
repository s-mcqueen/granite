<html>

  <head>
    <title>Welcome to exposu.re</title>    

    <!-- Load jquery first -->
    <script type="text/javascript" src="http://code.jquery.com/jquery.js"></script>

    <!-- Stylesheets, icons, fonts -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.1/css/bootstrap.min.css">
    <link href="css/thirdparty/ionicons.min.css" rel="stylesheet" >
    <link href='http://fonts.googleapis.com/css?family=PT+Sans' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <link href="css/custom.css" rel="stylesheet" >

  </head>

  <body>

    <!-- Curtain -->
    <div id="curtain">
      <div class="share">
        
        <!-- Social buttons need a link -->
        <a href="#" class="ion-social-facebook"></a>
        <a href="#" class="ion-social-twitter"></a>
      </div>
      <div id="titlewrap">
        <h1 id="title">exsposu.re</h1>      
      </div>
      <div class="search" id="sticky">
        <div id="searchwrap">
          <span>
            <div class="ion-search"></div>
          </span>
          <input id="searchbar" type="text" value="sunrise">      
        </div>
      </div>
    </div>

    <!-- Feed -->
    <div id="feed">
    </div>

    <!-- Image modal -->
    <div class="modal fade" id="img-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-header">          
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>            
        </div>
        <div class="modal-content">
          <div class="modal-body">                      
          </div>
          <div class="modal-footer">
          </div>
        </div>      
    </div>
    
    <!-- Third party JS libraries -->
    <script type="text/javascript" src="js/thirdparty/bootstrap.js"></script>
    <script type="text/javascript" src="js/thirdparty/masonry.pkgd.js"></script>
    <script type="text/javascript" src="js/thirdparty/handlebars-v1.2.0.js"></script>

    <!-- Client side JS modules -->
    <script type="text/javascript" src="js/img.js"></script>
    <script type="text/javascript" src="js/feed.js"></script>
    <script type="text/javascript" src="js/sticky.js"></script>

    <!-- Image feed template -->
    <script id="img-template" type="text/x-handlebars-template">

      {{#images}}
        <div class='img' largeRes={{largeRes}} data-id={{id}} data-hashtag={{hashtag}} data-user={{user}} data-status={{status}} style='background: url({{url}}); width: {{dim}}px; height: {{dim}}px; background-size: {{dim}}px {{dim}}px;'>
          <div class='img-layer' style= 'width: {{dim}}px; height: {{dim}}px; font-size: {{fontDim}}px;'>
            <div class='icon ion-minus-circled'> </div>  
            <div class='icon ion-ios7-plus'> </div> 
          </div>
        </div>
      {{/images}}

    </script>

    <script id="modal-template" type="text/x-handlebars-template">

      <div class='modal-img' style='background: url({{url}}); width: 600px; height: 600px;'> 
      </div>;    

    </script>

    </body>
  </html>

